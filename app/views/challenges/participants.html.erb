<% content_for :head do %><title>Participants - CloudSpokes</title><% end %>

<!-- CONTENT
        ================================================== -->
<div class="content-wrapper">
    <div class="container">

        <div class="title"><h1>PARTICIPANTS</h1></div>

        <% if @participants.empty? %>
            <div align="center"><strong>There are currently no participants for this challenge.</strong></div>
        <% end %>        

        <% @participants.in_groups_of(3, false) do |row_participants| %>
        <div class="row-fluid">
            <% for p in row_participants %> 
            <div class="span4">
                <div class="well well-large">
                    <%= cl_image_tag(p.member.profile_pic, :width => 82, :height => 82, :crop => :fill, 
                        :class => 'pull-left photo', :alt => p.member.name) %>
                    <div class="detail">
                        <h2><%= link_to p.member.name, member_path(p.member) %></h2>
                        <% if p.member.country %><%= p.member.country %><br/><% end %>
                        <%= number_to_currency p.member.total_money, precision: 0 %><br/>
                        <%= pluralize(p.member.total_wins, 'win') %><br>
                        <%= p.status %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
        <% end %>
    </div> <!-- /.container -->
</div><!-- /.loginbar-wrapper -->