<% content_for :head do %><title>Outstanding Reviews - CloudSpokes</title><% end %>

<!-- CONTENT
        ================================================== -->
<div class="content-wrapper">
    <div class="container">

        <div class="row-fluid">

            <div class="span9">
                <div class="title"><h1>OUTSTANDING REVIEWS</h1></div>

                <% if @scorecards.empty? %><div align="center">No more scorecards! Yippe!!</div><% end %>

                <% @scorecards.each do |s| %>
                <div class="review well well-large">
                    <h3><%= link_to s.challenge_participant__r.challenge__r.name, challenge_path(s.challenge_participant__r.challenge__r.challenge_id), :target => '_blank' %></h3>
                    <div class="row-fluid">
                        <%= image_tag(s.challenge_participant__r.member__r.profile_pic, :width => '75x75', :class => 'pull-left photo') %>
                        Member : <%= link_to s.challenge_participant__r.member__r.name, member_path(s.challenge_participant__r.member__r.name), :target => '_blank' %><br/>
                        Submitted : <%= participant_submission_date(Time.parse(s.challenge_participant__r.submitted_date).getutc) %>
                    </div>
                    <a class="btn pull-right-bottom" href="<%= participant_scorecard_path(s.challenge_participant) %>"><span>REVIEW</span></a>
                </div>
                <% end %>

            </div>

            <%= render 'shared/account_menu', :selected_item => 'outstanding_reviews' %>
        </div>

    </div> <!-- /.container -->
</div><!-- /.loginbar-wrapper -->